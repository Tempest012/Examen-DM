<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen_DM.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Calculadora para medir el FCN" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Latidos" />
        <Entry Placeholder="Latidos" x:Name="Latidos" Keyboard="Numeric"/>
        <Button Text="Calcular" Clicked="Button_Clicked"/>
        <Image Source="https://i.ibb.co/XCmRrpD/comprobar.png" IsVisible="false" x:Name="comprobar"/>
        <Image Source="https://i.ibb.co/qypcjwM/crisis.png" IsVisible="False" x:Name="crisis"/>
    </StackLayout>

</ContentPage>
